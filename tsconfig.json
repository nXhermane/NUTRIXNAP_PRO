{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@comp/*": [
        "./components/*"
      ],
      "@pack/*": [
        "./packages/*"
      ],
      "@shared": [
        "./core/shared"
      ]
    },
    "noImplicitAny": true,
    "experimentalDecorators": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}