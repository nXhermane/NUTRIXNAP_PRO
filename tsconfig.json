{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@comp/*": [
        "./components/*"
      ],
      "@pack/*": [
        "./packages/*"
      ],
      "@shared": [
        "./core/shared"
      ],
      "@foodAndRecipe":["./core/FoodsAndRecipesDatabase"],
      "@patientManager":["./core/PatientManager"],
      "@nutritionistManager":["./core/NutritionistManager"],
      "@medicalRecordManager":["./core/MedicalRecordManager"]
    },
    "noImplicitAny": true,
    "experimentalDecorators": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}